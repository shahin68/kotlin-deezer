<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Deezer" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_200</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">?attr/colorPrimary</item>
        <item name="colorSecondaryVariant">?attr/colorPrimaryVariant</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorOnPrimary</item>
        <item name="android:navigationBarColor" tools:targetApi="l">?attr/colorOnPrimary</item>
        <!-- Customize your theme here. -->
        <item name="android:windowBackground">?attr/colorOnPrimary</item>
        <item name="colorPrimaryDark">@color/white</item>
        <item name="autoCompleteTextViewStyle">@style/AutoCompleteTextView</item>
        <item name="fontFamily">@font/font_regular</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:textColor">?attr/colorPrimaryDark</item>
        <item name="android:textSize">@dimen/generic_text_size</item>
    </style>

    <style name="CardViewStyle" parent="CardView">
        <item name="cardBackgroundColor">?attr/colorPrimaryDark</item>
    </style>

    <style name="SearchViewStyle" parent="Widget.AppCompat.SearchView">
        <item name="searchHintIcon">@null</item>
        <item name="searchIcon">@drawable/ic_search_black</item>
        <item name="closeIcon">@drawable/ic_close_black</item>
    </style>

    <style name="AutoCompleteTextView" parent="Widget.AppCompat.Light.AutoCompleteTextView">
        <item name="android:textColor">?attr/colorOnPrimary</item>
        <item name="android:textColorHint">@android:color/darker_gray</item>
        <item name="android:textSize">@dimen/generic_text_size</item>
        <item name="android:paddingLeft">@dimen/search_view_start_padding</item>
        <item name="android:paddingTop">@dimen/search_view_top_padding</item>
    </style>
</resources>